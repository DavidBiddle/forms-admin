<%= form_with(model: group) do |f| %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <% if group.errors.any? %>
      <%= f.govuk_error_summary %>
    <% end %>

    <%= f.govuk_text_field :name, label: {  tag: 'h2', size: 'm' } %>

    <%= f.govuk_submit t("save_and_continue") %>
  <% end %>
  </div>
</div>
